<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lfile_white">

    <LinearLayout
        android:id="@+id/layout_path"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#E3E7EA"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_path"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:gravity="left|center"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"/>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/tv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/note_file_return"
                android:clickable="true"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>
        </RelativeLayout>
    </LinearLayout>


    <com.example.smile.view.EmptyRecyclerView
        android:id="@+id/recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_path"
        android:overScrollMode="never"/>

    <include
        android:id="@+id/empty_view"
        layout="@layout/note_file_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_path" />

</RelativeLayout>