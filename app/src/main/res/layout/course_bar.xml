<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/todo_actionbar"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/course_return"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/course_return"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:text="智能平台开发"
        android:textSize="25sp"
        android:layout_toEndOf="@id/course_return"
        android:gravity="left|center"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/course_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/files_count"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/files_count"
            android:text="0"
            android:textSize="30sp"
            android:layout_marginEnd="20dp"
            android:id="@+id/folder_count"/>





</RelativeLayout>