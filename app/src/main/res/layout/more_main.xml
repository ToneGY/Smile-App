<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/more_action_bar"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/user_info"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/more_list"
        android:overScrollMode="never">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED"
        android:orientation="vertical">
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="15dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="小组管理"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"
                        android:id="@+id/more_group_manage"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="更换密码"
                        android:id="@+id/more_change_passwd"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="更换背景"
                        android:id="@+id/more_change_backgroud"
                        android:background="@color/white"
                        android:textSize="20sp"

                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="版本信息"
                        android:id="@+id/more_release_info"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"

                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="检查更新"
                        android:id="@+id/more_check_update"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="分享应用"
                        android:id="@+id/more_share_app"
                        android:background="@color/white"
                        android:textSize="20sp"

                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="支持我们"
                        android:id="@+id/more_support_me"
                        android:background="@color/white"
                        android:textSize="20sp"

                        android:paddingStart="40dp"
                        android:paddingVertical="10dp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mossionregular_eajae"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:id="@+id/more_logout"
                        android:gravity="center_horizontal"
                        android:textColor="#F2FF1500"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:paddingVertical="5dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:visibility="invisible"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>