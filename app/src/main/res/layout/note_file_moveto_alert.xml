<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/lfile_gray">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/note_file_move"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动文件/文件夹"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前文件夹:"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/note_curPWD"
            android:text="elearning"
            android:ellipsize="start"
            android:gravity="left|center"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动到路径:"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/note_nextPWD"
            android:text="elearning"
            android:ellipsize="start"
            android:gravity="left|center"
            android:singleLine="true"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_centerHorizontal="true">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/note_move_recycle"
                android:layout_marginStart="10dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/note_move_new_folder"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="创建新文件夹"
                    android:background="@drawable/note_move_alert"
                    android:visibility="visible"/>
                <EditText
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:hint="输入文件名"
                    android:textColorHint="@color/lfile_gray"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/white_border"
                    android:id="@+id/note_new_folder_create"
                    android:visibility="gone"/>
            </RelativeLayout>
            <Button
                android:id="@+id/note_move_confirm"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="确定"
                android:layout_marginStart="30dp"
                android:background="@drawable/note_move_alert"/>
            <Button
                android:id="@+id/note_move_cancel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="取消"
                android:layout_marginStart="10dp"
                android:background="@drawable/note_move_alert"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>